<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmFinalOrderActivity"
    android:background="@drawable/bg_admin_products">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please write your Shipment Details"
        android:textSize="22dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_margin="15dp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed-medium"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/shipment_customer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_below="@+id/txt"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:singleLine="true"
        android:layout_marginRight="20dp"
        android:hint="Your Name"
        />

    <EditText
        android:id="@+id/shipment_customer_phone_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/text_color"
        android:layout_below="@+id/shipment_customer_name"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="number"
        android:hint="Your Phone Number"/>

    <EditText
        android:id="@+id/shipment_customer_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_below="@+id/shipment_customer_phone_num"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Your Address"/>

    <EditText
        android:id="@+id/shipment_customer_city"
        android:layout_width="match_parent"
        android:textColor="@color/text_color"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shipment_customer_address"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:singleLine="true"
        android:layout_marginRight="20dp"
        android:hint="Your City Name"/>

    <Button
        android:id="@+id/shipment_confirm_order_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_margin="40dp"
        android:text="Confirm Order"/>

</RelativeLayout>