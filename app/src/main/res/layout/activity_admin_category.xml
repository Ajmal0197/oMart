<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity"
    android:layout_centerInParent="true"
    android:background="@drawable/bg_admin_products">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:text="Add New Product"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="serif-monospace"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        />

<LinearLayout
    android:layout_marginTop="20dp"
    android:layout_above="@+id/check_orders_btn"
    android:layout_marginBottom="10dp"
    android:padding="10dp"
    android:layout_below="@+id/slogan_category"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:orientation="horizontal"
        android:weightSum="3" >

        <TextView
            android:id="@+id/general_ailments"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="General\nAilments"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@drawable/buttons_design"
            />

        <TextView
            android:id="@+id/heart_care"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="2dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:text="Heart\nCare"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@drawable/buttons_design" />

        <TextView
            android:id="@+id/stomach_care"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="Stomach\nCare"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@drawable/buttons_design" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3" >

        <TextView
            android:id="@+id/skin_care"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Skin\nCare"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@drawable/buttons_design" />

        <TextView
            android:id="@+id/blood_care"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Blood\nCare"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@drawable/buttons_design" />

        <TextView
            android:id="@+id/brain_care"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="Brain\nCare"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@drawable/buttons_design" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="3" >

        <TextView
            android:id="@+id/oral_care"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_marginEnd="5dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Oral\nCare"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@drawable/buttons_design" />

        <TextView
            android:id="@+id/cough_care"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:text="Cough\nCare"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@drawable/buttons_design" />

        <TextView
            android:id="@+id/chest_care"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Chest\nCare"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@drawable/buttons_design" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:orientation="horizontal"
        android:weightSum="3" >

        <TextView
            android:id="@+id/liver_care"
            android:layout_width="0dp"
            android:layout_marginEnd="5dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Liver\nCare"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:background="@drawable/buttons_design" />

        <TextView
            android:id="@+id/joint_care"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Joint\nCare"
            android:layout_marginEnd="5dp"
            android:textSize="18sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:background="@drawable/buttons_design" />

        <TextView
            android:id="@+id/hair_care"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:text="Hair\nCare"
            android:gravity="center"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@drawable/buttons_design" />
    </LinearLayout>

</LinearLayout>    


    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_above="@+id/admin_logout_btn"
        android:background="@color/colorPrimaryDark"
        android:text="Check New Orders"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@color/colorPrimaryDark"
        android:text="Logout"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textAllCaps="false"
        />


</RelativeLayout>


